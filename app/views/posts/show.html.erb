<br><br><div class="container">
<h2 align="center">All posts for selected user</h2>
    <div class="card card-body ">
        <h4 class="card-title">#<%=@post.id%>.<%= @post.title%></h4>
        <p class="card-text">    <%= @post.text%> .</p>
        <div class="actions">
          <%= link_to "Edit" , edit_user_post_path(@user), class:"btn btn-primary" %>
          <%= link_to "show" , user_post_path(@user), class:"btn btn-success" %>
          <%= link_to "Delete" , user_post_path(@post), method: :delete , class:"btn btn-danger" %>

        </div>
    </div>
  <br><br>
    <%= link_to "Back" , user_path(@user), class:"btn btn-primary" %>
</div>
