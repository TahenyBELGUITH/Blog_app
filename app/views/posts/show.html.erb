<div class="container">
    <div class="card-post ">
        <h4 class="card-title">#<%=@post.id%>.<%= @post.title%></h4>
        <p class="card-text">    <%= @post.text%> .</p>
      <p>Comments:<%= @post[:comments_counter] %> Likes: <%= @post[:likes_counter] %> </p>

        <div class="actions d-flex">
          <%= form_with url: post_likes_path(@post), scope: :like do |form| %>
          <%= form.submit "Like", class:"btn btn-info" %>
          <% end %>
          <% if can? :update, @post%>
          <%= link_to "Edit" , edit_post_path(@post), class:"btn btn-primary" %>
          <% end %>
          <% if can? :destroy, @post%>
          <%= link_to "Delete" , user_post_path(@post), method: :delete , class:"btn btn-danger" %>
          <% end %>
        </div>
        <div class="create-comments">
          <%= render partial: "create_comments",  local: { post: @post } %>
        </div>
    </div>
  <br><br>
    <%= link_to "Back" , user_path(@user), class:"btn btn-primary" %>
</div>
<br><br>

