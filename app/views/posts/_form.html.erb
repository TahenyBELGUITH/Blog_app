<div class="container">
   <h1 align="center">New Post</h1>

 <%= form_with model: @post, url: user_posts_path, method: :post, class: 'form' do |f|%>
    <div>
      <%= f.label :title, 'Enter post title', class:"form-label" %><br>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div>
      <%= f.label :text, 'Enter post content', class:"form-label" %><br>
      <%= f.text_area :text, class:"form-control" %>
    </div>
    <div>
    <br>
      <%= f.submit class:" btn btn-success" %>
    </div>
  <% end %>

  </div>